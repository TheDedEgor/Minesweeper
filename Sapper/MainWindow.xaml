<Window x:Class="Sapper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sapper"
        xmlns:vm="clr-namespace:Sapper.ViewModels"
        mc:Ignorable="d"
        Title="Sapper" 
        Height="474" Width="464"
        Icon="Data/Images/mine.ico" FontWeight="Normal" Background="#FFA39D9D">
    <Window.DataContext>
        <vm:MainWindowViewModel/>
    </Window.DataContext>
    <Grid x:Name="baseGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="47*"/>
            <RowDefinition Height="182*"/>
        </Grid.RowDefinitions>
        <Label Content="Choose the difficulty of the game" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="0,14,0,0" FontSize="20" FontWeight="Normal" FontFamily="Baskerville Old Face" HorizontalAlignment="Center" VerticalAlignment="Top" Height="31" Width="286"/>
        <Button Command="{Binding CreateSapperFieldCommand}" Content="Beginner" HorizontalAlignment="Left" Margin="35,50,0,0" VerticalAlignment="Top" Height="29" Width="100" FontWeight="Normal" FontFamily="Dubai" FontSize="14" FontStyle="Normal" BorderThickness="2,2,2,2" Background="#FF84D0D2" BorderBrush="#FF503354">
            <Button.Effect>
                <DropShadowEffect/>
            </Button.Effect>
        </Button>
        <Button Content="Amateur" HorizontalAlignment="Center" Margin="0,50,0,0" VerticalAlignment="Top" Height="29" Width="100" FontWeight="Normal" FontFamily="Dubai" FontSize="14" FontStyle="Normal" BorderThickness="2,2,2,2" Background="#FFB7CB4F" BorderBrush="#FF503354">
            <Button.Effect>
                <DropShadowEffect/>
            </Button.Effect>
        </Button>
        <Button Content="Professional" HorizontalAlignment="Right" Margin="0,50,39,0" VerticalAlignment="Top" Height="29" Width="100" FontWeight="Normal" FontFamily="Dubai" FontSize="14" FontStyle="Normal" BorderThickness="2,2,2,2" Background="#FFC95A5A" BorderBrush="#FF503354">
            <Button.Effect>
                <DropShadowEffect/>
            </Button.Effect>
        </Button>
        <ContentControl Grid.Row="1" Content="{Binding Grid}"/>
    </Grid>
</Window>
